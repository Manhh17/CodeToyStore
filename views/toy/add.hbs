<style>
   .div_center {
      text-align: center;
   }

   .btnSend {
      display: block;
      margin: auto;
      width: 20%;
      margin-top: 50px;
      padding: 10px 0;
      background: #6fd649;
      color: #fff;
      border: 0;
      outline: none;
      font-size: 18px;
      border-radius: 4px;
      cursor: pointer;
      box-shadow: 0 5px 5px rgba(0, 0, 0, 0.2);
      margin: auto;
      height: 40px;
   }
</style>
<div class="row" style="min-height: 550px;">
   <div class="col-md-8 mx-auto">
      <form action="/toy/add" method="POST">
         <div class="card">
            <div class="card-body">
               <h3 class="card-title" style="text-transform:none; text-align:center">Add a new Toy</h3>
               <div class="form-group">
                  <label for="greeting"> Toy name:</label>
                  <input type="text"  name="name" class="form-control">
               </div>

               <div class="form-group">
                  <label for="firstline">Toy description:</label>
                  <input type="text"  name="description" class="form-control">
               </div>

               <div class="form-group">
                  <label for="body">Toy price:</label>
                  <input type="text"  name="price" class="form-control">
               </div>

               <div class="form-group">
                  <label for="button">Toy image:</label>
                  <input type="url" id="button" name="image" class="form-control">
               </div>

               <div class="form-group">
                  <label for="">Toy brand:</label>
                  <select name="brand" class="form-control">
                     {{#each brands }}
                     <option value="{{ _id }}"> {{ name }}</option>
                     {{/each}}
                  </select>
               </div>
               <div class="form-group">
                  <button type="submit" class="btn btn-primary btnSend">Add</button>
               </div>
            </div>
         </div>
      </form>
   </div>
</div>